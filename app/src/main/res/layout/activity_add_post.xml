<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.AddPostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="#f9f9f9"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_icon"
            android:baselineAlignBottom="false"
            />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/addPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addsagin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/add_bg"
            android:text="사진 추가하기"
            android:textColor="@android:color/white"
            />


        <Button
            android:id="@+id/addmove"
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/add_bg"
            android:text="동영상 추가하기"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <EditText
            android:id="@+id/addText"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:hint="글을 입력해 보세요."
            android:background="#f9f9f9"/>

    </LinearLayout>

    <Button
        android:id="@+id/addfinish"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="등록"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/add_bg"/>

</LinearLayout>