<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/loginLogo"
        android:background="@drawable/login_logo_ic"
        android:layout_width="130dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="130dp"/>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_below="@+id/loginLogo"
        android:id="@+id/loginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/login_btn_bg"
        android:gravity="center|left"
        android:hint="ID"
        android:paddingLeft="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:theme="@style/textStyle"/>

    <EditText
        android:id="@+id/loginPasswd"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginId"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center|left"
        android:hint="PW"
        android:paddingLeft="15dp"
        android:textColorHint="@android:color/white"
        android:theme="@style/textStyle"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/loginPasswd"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_loginsuccess_btn"
        android:text="LOGIN"
        android:textColor="#cd50d3"/>

    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_below="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="아직 솔로가 아니신가요?"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/loginSignup"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="10sp"/>

    </LinearLayout>

</RelativeLayout>